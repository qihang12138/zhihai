<view class="redBar"></view>
<!-- 公司名片 -->
<view class="visitingCard">
  <view class="visitingCard-tit">
    <view class="visitingCard-name">{{pageData.name}}</view>
    <view class="view">52</view>
  </view>
  <view class="brief">
    <view class="brief-text">{{pageData.addr}}</view>
    <view class="darkSpot brief-text"></view>
    <view class="brief-text">{{pageData.people}}</view>
  </view>
  <view class="visitingCard-cont">{{pageData.marray}}</view>
  <view class="address">
    <view class="address-text">{{pageData.addr}}</view>
    <view class="tel"></view>
  </view>
</view>
<!-- 选项卡 -->
<van-tabs animated custom-class="tabs">
  <van-tab title="公司信息">
    <!-- 公司简介 -->
    <view class="aboutUs">
      <view class="aboutUs-tit">公司简介</view>
      <view class="aboutUs-cont">{{pageData.content}}</view>
    </view>
  </van-tab>
  <van-tab title="公司环境">
    <!-- 公司环境 -->
    <view class="aboutUs">
      <view class="aboutUs-tit">服务环境</view>
      <block wx:for="{{pageData.image}}" wx:key="index">
        <image src="{{item}}" class="aboutUs-img"></image>
      </block>
    </view>
  </van-tab>
  <van-tab title="公司招聘">
     <!-- 招聘 -->
    <view class="careers" wx:for="{{pageData.job}}" wx:key="index">
      <image src="https://s2.ax1x.com/2019/07/15/ZoFuee.png" class="careers-img"></image>
      <view class="careers-cont">
        <view class="careers-job">{{item.name}}</view>
        <view class="careers-text">
          {{item.addr}}
        </view>
        <view class="careers-text">
          <text>{{item.edu}}</text>
          <text>{{item.age}}</text>
        </view>
      </view>
      <view class="careers-pay">{{item.money}}</view>
    </view>
  </van-tab>
</van-tabs>