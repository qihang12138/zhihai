.search {
    border-top: 1px solid #f0f0f0;
    padding: 20rpx;
}

.search-input {
    width: 630rpx;
    height: 56rpx;
    background: url('data:image/png;base64,') no-repeat 42rpx 13rpx rgb(246, 247, 248);
    background-size: 30rpx 30rpx;
    border-radius: 28rpx;
    padding-left: 80rpx;
}

.screen {
    height: 80rpx;
    background: #ccc;
}

.organ {
    margin-bottom: 30rpx;
    box-shadow: 0 3rpx 10rpx 0 rgba(234, 234, 234, 1);
    padding-bottom: 30rpx;
    border-bottom: 1px solid #f0f0f0;
}

.organ-brief {
    padding: 30rpx 20rpx;
    display: flex;
    position: relative;
}

.organ-msg {
    font-size: 15px;
    color: #5F5F6B;
    display: inline-block;
    margin-right: 10rpx
}

.organ-img {
    width: 94rpx;
    height: 94rpx;
    border-radius: 10rpx;
    margin-right: 30rpx;
}

.label {
    font-size: 12px;
    color: #999;
    background: rgb(244, 245, 246);
    display: inline-block;
    height: 44rpx;
    width: 100rpx;
    line-height: 44rpx;
    text-align: center;
    border-radius: 10rpx;
    margin-left: 20rpx;
}