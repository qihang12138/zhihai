page {
    padding-bottom: 150rpx;
    background: #f4f5f6;
}

.jobCard {
    margin: 20rpx;
    padding: 30rpx 30rpx 0;
    box-shadow: 0px 2px 6px 0px rgba(233, 232, 232, 1);
    background: #fff;
}

.job-tit {
    padding-bottom: 10rpx;
    font-size: 14px;
    color: #333;
}

.job-text {
    padding-right: 25rpx;
}

.job-msg {
    display: flex;
    align-items: center;
    padding: 30rpx 0;
    border-bottom: 1px solid #f0f0f0;
}

.job-font {
    font-size: 12px;
    color: #999;
}

.job-money {
    flex: 1;
    font-size: 14px;
    color: #D86381;
}

.job-site {
    padding: 25rpx;
    background: url('data:image/png;base64,') no-repeat 0 center/17rpx 23rpx
}


/* 职位详情 */

.details {
    padding: 30rpx 20rpx 100rpx;
    background: #fff;
}

.details-tit {
    padding-bottom: 25rpx;
}

.details-cont {
    font-size: 12px;
    color: #666;
}


/* 公司信息 */

.company {
    padding: 0 20rpx 50rpx;
    background: #fff;
}

.company-tit {
    padding-bottom: 30rpx;
}

.company-card {
    display: flex;
    position: relative;
}

.company-img {
    margin-right: 14rpx;
    width: 60rpx;
    height: 60rpx;
}

.company-cont {
    color: #999;
    font-size: 12px;
}

.company-card:after {
    content: '';
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    width: 20rpx;
    height: 20rpx;
    border-top: 4rpx solid #ddd;
    border-right: 4rpx solid #ddd;
    transform: rotate(45deg);
}


/* 推荐 */

.recommend-tit {
    padding: 15rpx 0;
    margin-bottom: 20rpx;
    text-align: center;
    font-size: 12px;
    color: #d0d0d0;
}

.recommend {
    padding: 40rpx;
    background: #fff;
}

.recommend-row {
    display: flex;
}

.recommend-site {
    padding-top: 20rpx;
    font-size: 12px;
    color: #999;
}

.recommend-money {
    flex: 1;
    text-align: right;
    color: #D86381;
}