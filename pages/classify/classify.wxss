/* 下拉框 */

.classify {
    display: flex;
    padding: 20rpx 0;
    background: #f4f5f6;
}

.classify-type {
    display: flex;
    flex-wrap: wrap;
}

.classify-type-item {
    padding: 8rpx 0;
    margin: 10rpx 14rpx;
    min-width: 120rpx;
    text-align: center;
    font-size: 12px;
    background: #f4f4f4;
    border: 1rpx solid #f4f4f4;
}

.classify-on {
    color: #F36886;
    background: #F6E5E8;
    border: 1rpx solid #F36886;
}

.classify-box {
    flex: 1;
    text-align: center;
}

.classify-item {
    font-size: 14px;
    color: #5F5F6B
}

.collapse {
    display: flex;
    width: 750rpx;
}

.collapse-item {
    flex: 1 !important;
}


/* 舞者 */

.dancer {
    padding-bottom: 30rpx;
    border-bottom: 1rpx solid #f0f0f0;
    background: #fff;
}

.dancer-brief {
    padding: 30rpx 20rpx;
    display: flex;
    position: relative;
}

.dancer-msg {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 400rpx;
    font-size: 12px;
    color: #999;
}

.dancer-year {
    padding-left: 20rpx;
}

.dancer-img {
    width: 94rpx;
    height: 94rpx;
    border-radius: 10rpx;
    margin-right: 30rpx;
}

.check {
    position: absolute;
    right: 20rpx;
    top: 90rpx;
    line-height: 56rpx;
    font-size: 13px;
    color: #F36886;
    border: 1px solid #F36886;
    border-radius: 10rpx;
    text-align: center;
    width: 164rpx;
    height: 56rpx;
    background: #fff;
}

.label {
    display: inline-block;
    text-align: center;
    border-radius: 10rpx;
    margin-left: 20rpx;
    padding: 10rpx 15rpx;
    font-size: 12px;
    color: #999;
    background: rgb(244, 245, 246);
}