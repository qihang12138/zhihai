  <van-field value="{{ msgObj.name }}" required clearable label="姓名" icon="arrow" placeholder="必填" bind:input="changeMsgObj" data-id="name" />
  <van-field value="{{ msgObj.sex }}" required clearable label="性别" icon="arrow" placeholder="必填" bind:input="changeMsgObj" data-id="sex" />
  <van-cell title="头像" is-link />
  <van-field value="{{ msgObj.age }}" required clearable label="出生年月" icon="arrow" placeholder="必填" bind:input="changeMsgObj" data-id="age" />
  <van-cell title="专业" is-link value="{{ msgObj.major || '请选择专业' }}" bind:click="majorShow" data-id="major" />
  <van-cell title="学历" is-link value="{{ msgObj.edu || '请选择学历' }}" bind:click="eduShow" data-id="edu" />
  <van-cell title="所在地区" is-link value="{{ msgObj.addr }}" bind:click="site" />
  <van-field value="{{ msgObj.tel }}" required clearable label="手机号" icon="arrow" placeholder="必填" bind:input="changeMsgObj" data-id="tel" />
  <van-cell title="职业标签" is-link value="{{ msgObj.tag || '芭蕾舞等三个标签' }}" bind:click="tagShow" />
</view>
<view class="perfect">
  <view class="perfect-row underline">个人介绍</view>
  <textarea placeholder="请输入个人介绍..." maxlength="300" class="perfect-msg underline"></textarea>
  <view class="perfect-row underline">工作经历</view>
  <textarea placeholder="请输入工作..." maxlength="300" class="perfect-msg underline"></textarea>
  <view class="perfect-row underline">教育经历</view>
  <textarea placeholder="请输入教育经历..." maxlength="300" class="perfect-msg underline"></textarea>
  <view class="perfect-row underline">培训经历</view>
  <textarea placeholder="请输入培训经历..." maxlength="300" class="perfect-msg underline"></textarea>
</view>
<!-- 确认按钮 -->
<view class="my-btn-box">
  <button class="my-btn" bindtap="submit">确认</button>
</view>
<!-- 弹出层 -->
<!-- 专业 -->
<van-popup show="{{ majorShow }}" position="bottom" bind:close="onClose">
  <van-picker columns="{{ columns }}" bind:confirm="changeMajor" bind:cancel="onClose" show-toolbar />
</van-popup>
<!-- 学历 -->
<van-popup show="{{ eduShow }}" position="bottom" bind:close="onClose">
  <van-picker columns="{{ columns }}" bind:confirm="changeEdu" bind:cancel="onClose" show-toolbar />
</van-popup>
<!-- 职业标签 -->
<van-popup show="{{ tagShow }}" position="bottom" bind:close="onClose">
  <view class="tags">
    <block wx:for="{{tagList}}" wx:key="{{index}}">
      <view class="tag {{item.status ? 'tag-on' : ''}}" data-index="{{index}}" bindtap="onTag" data-id="{{item.id}}">{{item.name}}</view>
    </block>
  </view>
  <view class="my-btn-box">
    <button class="my-btn" bindtap="changeTag">确认</button>
  </view>
</van-popup>
<!-- 所在地区 -->
<van-popup show="{{ siteShow }}" position="bottom" bind:close="onClose">
  <van-area area-list="{{ areaList }}" bind:cancel="onClose" bind:confirm="confirm" />
</van-popup>