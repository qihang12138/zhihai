/* 名片 */

.redBar {
    background: #f36886;
    height: 190rpx;
}


/* 个人信息名片 */

.nameCard {
    margin: -120rpx 20rpx 20rpx;
    padding: 40rpx 45rpx;
    border-radius: 10rpx;
    text-align: center;
    color: #222;
    background: #fff;
}

.nameCard-img {
    margin: -100rpx auto 20rpx;
    height: 130rpx;
    width: 130rpx;
    border-radius: 50%;
}

.nameCard-name {
    font-size: 18px;
}

.nameCard-job {
    font-size: 14px;
    margin: 13rpx 0 28rpx;
}

.nameCard-brief {
    font-size: 13px;
    width: 464rpx;
    margin: 0 auto;
}

.nameCard-site {
    display: inline-block;
    margin: 35rpx;
    padding-left: 30rpx;
    font-size: 14px;
    background: url('data:image/png;base64,') no-repeat 0 center/17rpx 23rpx
}


/* 选项卡 */

.tabs {
    padding: 100rpx 20rpx 0 !important;
}

.van-tab__pane {
    border-radius: 10rpx !important;
}


/* 公用 */

.tab {
    font-size: 15px;
    color: #333;
    background: #fff;
}

.underline {
    border-bottom: 1rpx solid #f0f0f0
}


/* 个人简历 */

.resume {
    padding: 30rpx 40rpx 0;
}

.resume-tit {
    font-size: 16px;
    font-weight: 500;
    color: #000;
}

.resume-row {
    padding: 35rpx 0;
    display: flex
}

.resume-msg {
    min-width: 160rpx;
    font-size: 15px;
    color: #999;
}


/* 工作经历 */

.job {
    margin-bottom: 110rpx;
    padding: 30rpx 0 150rpx;
}

.job-tit {
    margin-bottom: 20rpx;
    padding: 0 0 35rpx 40rpx;
    font-size: 16px;
    color: #000;
}

.job-brief {
    padding: 20rpx 0;
    margin: 0 40rpx;
}

.job-site {
    font-size: 15px;
    color: #333;
}

.job-time {
    padding: 5rpx 0 17rpx 0;
    font-size: 12px;
    color: #999;
}

.job-duties {
    font-size: 13px;
    color: #333;
}


/* 教育经历 */

.teach-time {
    padding: 5rpx 0;
    font-size: 12px;
    color: #999;
}

.teach-major {
    padding-right: 10rpx;
    margin-right: 10rpx;
    border-right: 1rpx solid #f0f0f0;
}


/* 培训经历 */

.evaluate {
    padding: 30rpx 0;
}

.evaluate-cont {
    padding: 50rpx;
    font-size: 13px;
    color: #333;
}