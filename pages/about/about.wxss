/* 选项卡 */

.tabs {
    display: flex;
    justify-content: center;
    align-items: center;
    color: #5f5f6b;
    font-size: 14px;
    padding: 0 32rpx;
    background: #fff;
    margin: 20rpx 0;
}

.tab {
    text-align: center;
    flex: 1;
    margin: 0 20rpx;
    padding: 32rpx 0;
}

.on {
    border-bottom: 1rpx solid #f36886;
    color: #000;
}


/* 个人简历 */

.resume {
    padding: 30rpx 40rpx 150rpx;
    font-size: 15px;
    color: #333;
    background: #fff;
}

.underline {
    border-bottom: 1rpx solid #f0f0f0
}

.resume-tit {
    padding-bottom: 35rpx;
    font-size: 16px;
    color: #000;
}

.resume-row {
    padding: 35rpx 0;
    display: flex
}

.resume-msg {
    flex: 1;
    text-align: right;
    font-size: 15px;
    color: #999;
}